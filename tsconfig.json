{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./tsconfig-base.json",
	"include": ["./types", "./test", "./scripts"],
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"module": "CommonJS"
	}
}
