{
	"name": "chance-ui",
	"private": true,
	"packageManager": "pnpm@6.3.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"postinstall": "manypkg check",
		"build": "node scripts/copy-license.mjs && turbo run build",
		"dev": "turbo run dev --no-cache --parallel --continue",
		"start": "start-storybook -p 9001 -c .storybook --ci",
		"lint": "turbo run lint",
		"test": "vitest",
		"clean": "turbo run clean && rm -rf node_modules",
		"format": "prettier --write \"**/*.{json,js,jsx,ts,tsx,md}\"",
		"changeset": "changeset",
		"prerelease": "pnpm build -- --filter=docs^... && node scripts/replace-workspace-versions.mjs",
		"release": "pnpm run prerelease && changeset publish",
		"version": "changeset version"
	},
	"dependencies": {
		"@babel/core": "^7.17.9",
		"@babel/preset-react": "^7.16.7",
		"@changesets/changelog-github": "0.4.4",
		"@changesets/cli": "^2.22.0",
		"@manypkg/cli": "0.19.1",
		"@manypkg/get-packages": "^1.1.3",
		"@testing-library/dom": "^8.13.0",
		"@testing-library/jest-dom": "^5.16.4",
		"@testing-library/react": "^13.1.1",
		"@testing-library/user-event": "14.1.1",
		"@types/node": "16.x",
		"@types/prettier": "^2.6.0",
		"@types/react": "^18.0.8",
		"@types/react-dom": "^18.0.3",
		"@vitejs/plugin-react": "^1.3.2",
		"@vitest/ui": "^0.9.4",
		"axe-core": "^4.4.1",
		"chalk": "^5.0.1",
		"eslint": "^8.14.0",
		"jest-axe": "^6.0.0",
		"jsdom": "^19.0.0",
		"prettier": "^2.6.2",
		"react": "^18.1.0",
		"react-dom": "^18.1.0",
		"tsup": "^5.12.6",
		"turbo": "^1.2.5",
		"type-fest": "^2.12.2",
		"typescript": "^4.6.4",
		"vitest": "^0.9.4"
	},
	"manypkg": {
		"ignoredRules": [
			"INTERNAL_MISMATCH"
		]
	}
}
